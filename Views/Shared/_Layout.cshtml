<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title - Fun App</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/typed.js")
    @Scripts.Render("~/Scripts/sweetalert2@11.js")

    <style type="text/css">
        .Choices label {
            background-color: #e0dfdf;
            padding: 7px 20px;
            border-radius: 10px;
            display: inline-block;
            margin-bottom: 8px;
            font-weight: bold;
            border: 1px solid #d0c9c9;
        }

        div .answer, .radio-inline {
            font-weight: bold;
        }
    </style>
</head>
<body style="padding-top: 70px;">
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        @*@Html.ActionLink("🎲 🤪 🧩 Hola 🧸 🤣 🤠", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", id = "nbarBrand" })*@
        <a class="navbar-brand" id="nbarBrand" href="#">🎲 🤪 🧩 Hola 🧸 🤣 🤠</a>
        <a class="nav-link disabled" id="nbarBrandHelp" style="color: whitesmoke" >👈🏻 (Hover to see the answer)</a>

        <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="navbar-nav mr-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    @*<li class="nav-item active">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item"><a class="nav-link" href="#">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>*@

                    <li id="startExam">@Html.ActionLink("Thank you for registering", "Index", "Home")</li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p><a id="helpMe" style="position: absolute; bottom: 5px; right: 5px; margin: 0; padding: 5px 3px; color: red;" href="@Url.Action("Index", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">Need Help?</a></p>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Fun Application</p>
        </footer>
    </div>

        @Scripts.Render("~/bundles/jquery")
    
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        @RenderSection("MyScritps", required: false)
</body>
</html>